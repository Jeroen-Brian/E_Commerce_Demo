{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es6",
      "module": "commonjs",
      "skipLibCheck": true,
      "strict": true,
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "sourceMap": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false
   },
   "include": [
      "src/**/*.ts"
, "src/index.tsx"   ],
   "exclude": [
      "node_modules"
   ],
}